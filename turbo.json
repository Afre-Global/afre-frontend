{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"],
      "env": [
        "NEXT_PUBLIC_BUYER_PLATFORM_URL",
        "NEXT_PUBLIC_SELLER_PLATFORM_URL",
        "NEXT_PUBLIC_BACKEND_URL",
        "STACK_SECRET_SERVER_KEY",
        "DATABASE_URL"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NEXT_PUBLIC_BUYER_PLATFORM_URL",
        "NEXT_PUBLIC_SELLER_PLATFORM_URL",
        "NEXT_PUBLIC_BACKEND_URL",
        "STACK_SECRET_SERVER_KEY",
        "DATABASE_URL"
      ]
    }
  }
}
