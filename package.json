{
  "name": "my-turborepo",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:sell": "turbo run build --filter=./apps/seller",
    "build:cus": "turbo run build --filter=./apps/customer",
    "dev": "turbo run dev",
    "dev:sell": "turbo run dev --filter=./apps/seller",
    "dev:cus": "turbo run dev --filter=./apps/customer",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "prettier": "^3.5.3",
    "turbo": "^2.4.4",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "lucide-react": "^0.477.0"
  }
}
